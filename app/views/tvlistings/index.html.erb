



  
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%#  長いバージョン form_for(@tvshow, url: tvshows_path) %>
      <%#  短いバージョン form_for(@tvshow) %>
      <%= form_for(@tvlisting) do |f| %>
          <div class="form-group">
            
            <%= f.label :title, '番組表の名前' %>
            
            <%= f.text_field :title, class: 'form-control' %>
          </div>

        
          
          <div class="text-right">
            <%= f.submit '登録する', class: 'btn btn-success' %>
          </div>
      <% end %>
      
      
   
      
      
    </aside>
    <div class="col-xs-8">
      <%= render 'tvlistings', tvlistings: @tvlistings %>
      
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>自分専用テレビ番組表</h1>
      <%= link_to '新規登録しましょう', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>